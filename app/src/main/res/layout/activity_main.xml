<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.udacity.myapplication.mainactivity.make_my_own_card.MainActivity">
<!--
android:background="@drawable/swamivivekanada"
for some images unable to use ImageView to fully stretch the image, so using background attribute in relativeLayout
-->

<ImageView
    android:id="@+id/swamivivekanada"
    android:src="@drawable/swamivivekanada"
    android:scaleType="fitXY"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    />

<TextView
    android:id="@+id/text1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_marginTop="50dp"
    android:layout_margin="20dp"
    android:text="Take Risks In Your Life"
    android:fontFamily="sans-serif-light"
    android:textStyle="bold|italic"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:textColor="#4A148C"
    android:textSize="22sp"
    />

<TextView
    android:id="@+id/text2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:text="If You Win You Can Lead!"
    android:fontFamily="sans-serif-light"
    android:textStyle="bold|italic"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/text1"
    android:textColor="#4A148C"
    android:textSize="22sp"

    />

<TextView
    android:id="@+id/text3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:text="If You Loose, You Can Guide!"
    android:fontFamily="sans-serif-light"
    android:textStyle="bold|italic"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/text2"
    android:textColor="#4A148C"
    android:textSize="22sp"
    />

</RelativeLayout>